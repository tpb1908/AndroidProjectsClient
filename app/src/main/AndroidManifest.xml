<manifest package="com.tpb.projects"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:fullBackupContent="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="false"/>

        <activity
            android:name=".user.UserActivity"
            android:theme="@style/AppTheme.Transparent.Dark"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>

        <activity android:name=".repo.RepoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".repo.content.ContentActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".project.ProjectActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".issues.IssueActivity"
                  android:theme="@style/AppTheme.Transparent.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".issues.IssuesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".editors.IssueEditor"
                  android:theme="@style/AppTheme.Transparent.Dark"/>

        <activity android:name=".editors.CardEditor"
            android:theme="@style/AppTheme.Transparent.Dark"/>

        <activity android:name=".editors.CommentEditor"
                  android:theme="@style/AppTheme.Transparent.Dark"/>

        <activity android:name=".data.SettingsActivity"/>

        <activity android:name=".repo.content.FileActivity"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.tpb.projects.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/image_paths"/>

        </provider>

        <activity
            android:name=".util.Interceptor"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <data
                    android:host="github.com"
                    android:scheme="http"/>
                <data
                    android:host="github.com"
                    android:scheme="https"/>
                <data android:pathPattern=".*"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
        </activity>

    </application>

</manifest>