<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/project_edit_button"
            android:textAppearance="@android:style/TextAppearance.Material.Title"/>

        <TextView
            android:id="@+id/project_last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project_name"
            android:layout_toStartOf="@+id/project_edit_button"
            android:textAppearance="@android:style/TextAppearance.Material.Small"/>

        <ImageButton
            android:id="@+id/project_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent"
            android:contentDescription="@string/content_description_edit"
            android:layout_alignParentEnd="true"/>

        <org.sufficientlysecure.htmltext.htmltextview.HtmlTextView
            android:id="@+id/project_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/project_last_updated"
            android:layout_alignParentBottom="true"
            android:textAppearance="@android:style/TextAppearance.Material.Body1"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>