<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewholder_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:minHeight="32dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:focusable="true"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/issue_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"/>

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/issue_content_markdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/issue_drawable"
            android:layout_toStartOf="@+id/issue_menu_button"
            android:layout_centerVertical="true">
        </org.sufficientlysecure.htmltextview.HtmlTextView>


        <ImageButton
            android:id="@+id/issue_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_down"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>