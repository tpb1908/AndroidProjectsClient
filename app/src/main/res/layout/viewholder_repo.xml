<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    android:transitionName="@string/transition_name">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:duplicateParentState="true">

        <ImageButton
            android:id="@+id/repo_pin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_not_pinned"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/repo_pin_button"
            android:layout_toStartOf="@+id/repo_details"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/repo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repo_name"
            android:layout_toEndOf="@+id/repo_pin_button"
            android:layout_toStartOf="@+id/repo_details"
            android:duplicateParentState="true"/>

        <LinearLayout
            android:id="@+id/repo_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:duplicateParentState="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/repo_forks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_zero_value"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_forked"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:duplicateParentState="true">

                <TextView
                    android:id="@+id/repo_stars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_zero_value"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_stars"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>